                                <TextBlock Name="txtSvestenik" Text="" />
                                <TextBlock Text="Парохија" FontSize="14" FontWeight="DemiBold" Margin="0 10 0 0" />
                                <TextBlock Name="txtParohijaSvestenika" Text="" />
                                <TextBlock Text="Мобилни тел." FontSize="14" FontWeight="DemiBold" Margin="0 10 0 0" />
                                <TextBlock Name="txtTelefonSvestenika" Text="" />
                            </StackPanel>
                            <Image Name="imgSvestenik" Grid.Column="0" Stretch="Uniform" Width="210" Height="240" Margin="6,0,6,10" Grid.RowSpan="2" />
                            <Button x:Name="btnDialogSlika" Content="Промените слику.." Grid.Column="1" Style="{StaticResource Batoni}" Width="170" Margin="0" Grid.Row="1" VerticalAlignment="Center"  Height="32" Click="btnDialogSlika_Click" />
