                                <TextBlock Name="TextBlockUkupnoParohijana" FontSize="14" Margin="0 5 0 0" HorizontalAlignment="Left" FontWeight="DemiBold" Text="0" />
                                <TextBlock Name="TextBlockUkupnoKojiSlave" FontSize="14" Margin="0 5 0 0" FontWeight="DemiBold" HorizontalAlignment="Left" Text="0" />
                                <TextBlock Name="TextBlockUkupnoPrimanjeUskrs" FontSize="14" Margin="0 5 0 0" FontWeight="DemiBold" HorizontalAlignment="Left" Text="0" />
                            </StackPanel>
                            <Button x:Name="buttonIzlaz" Click="buttonIzlaz_Click" Style="{StaticResource Batoni}" Content="Излаз" Grid.Column="2" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Width="158" Height="35" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
