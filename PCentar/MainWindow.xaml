                            <ComboBoxItem Content="Није у браку" />
                            <ComboBoxItem Content="Разведен/а" />-->
                        </ComboBox>
                        <ComboBox x:Name="comboBoxParohijal" Grid.Column="1" HorizontalAlignment="Left" Margin="5" Grid.Row="11" VerticalAlignment="Center" Width="62">
                            <!--<ComboBoxItem Content="Да" />
                            <ComboBoxItem Content="Не" />-->
                        </ComboBox>
                        <Label Content="Колико:" Grid.Column="1" FontSize="14" HorizontalAlignment="Left" Padding="0" Margin="90 0 0 0" Grid.Row="11" VerticalAlignment="Center" />
