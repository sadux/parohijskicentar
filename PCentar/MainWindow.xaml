                                 VerticalScrollBarVisibility="Visible" Grid.RowSpan="2" Height="67" AcceptsReturn="True" Width="232" />
                        <Label Content="Прима свештеника за Ускрс:" Style="{StaticResource labelaMain}" Grid.Column="2" Grid.Row="5" />
